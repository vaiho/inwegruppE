@*<p>
    @Html.ActionLink("Skapa ny", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            Namn
        </th>
        <th>
            Nationalitet
        </th>
        <th>
            Kompetenser
        </th>
        <th>
            Teknologier
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fullname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nationality)
        </td>
        <td>
            @foreach (var x in item.CompetencesList)
            {
            <span>@Html.DisplayFor(modelItem => x.name),</span>
            }
        </td>
        <td>
            @foreach (var x in item.TechnologysList)
            {
            <span>@Html.DisplayFor(modelItem => x.name), </span>
            }
        </td>
        <td>
            @Html.ActionLink("Spara |", "ProfilePage", new { id = item.Freelancer_id }) 
            @Html.ActionLink("Besök profil", "ProfilePage", new { id = item.Freelancer_id })
        </td>
    </tr>

    }

</table>
