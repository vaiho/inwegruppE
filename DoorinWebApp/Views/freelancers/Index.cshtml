@{
    ViewBag.Title = "Alla frilansare";
}

<div class="box">
    <input type="text" id="search" placeholder="Sök här" >
    <img id="searchbtn" src="~/Content/images/search.png" />
    <div id="filterbtn">
        <img src="~/Content/images/filter.png" />
        Filters
    </div>
</div>

<h2>Alla Frilansare</h2>

<h4>Sortera på kompetenser:</h4>
<p class="btn">Programmer</p> <p class="btn">Designer</p>

<br />
<br />

<h4>Sortera på teknologier:</h4>
